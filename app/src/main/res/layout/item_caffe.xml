<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/CardView_caffe_margin"
    android:clickable="true"
    app:cardBackgroundColor="@color/CardView_caffe_background"
    app:cardCornerRadius="@dimen/CardView_caffe_corner_radius"
    app:cardElevation="@dimen/CardView_caffe_elevation">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/CardView_caffe_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_caffe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/CardView_caffe_margin"
            android:textSize="@dimen/CardView_caffe_name_caffe_textSize"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/CardView_caffe_margin"
            android:layout_marginBottom="@dimen/CardView_caffe_margin" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</com.google.android.material.card.MaterialCardView>
